{
  "name": "thinkfan-electron",
  "version": "1.0.0",
  "description": "ThinkFan configuration utility",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development tsc -w -p tsconfig.electron.json\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run clean && vite build && tsc -p tsconfig.electron.json && electron-builder",
    "preview": "vite preview",
    "clean": "rm -rf dist release"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@shadcn/ui": "^0.0.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "yaml": "^2.6.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.thinkfan.electron",
    "productName": "ThinkFan Configuration",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "asar": true,
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "maintainer": "Your Name <your.email@example.com>"
    }
  }
}
